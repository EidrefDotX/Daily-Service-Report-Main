# Copy this file to .env and fill in the correct values

# ============================================
# PRODUCTION SETTINGS (REQUIRED ON VERCEL)
# ============================================
# These MUST be set in production (Vercel Dashboard -> Settings -> Environment Variables):
# SECRET_KEY=<generate a strong random string>
# JWT_SECRET=<generate a strong random string>
# FLASK_DEBUG=false
# CORS_ORIGINS=https://your-app.vercel.app (NOT "*" in production!)
# DATABASE_URL=<from external PostgreSQL database (Neon, Supabase, etc.)>
# IMPORTANT: SQLite will NOT work on Vercel - you MUST use an external database!

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
# Format: postgresql+psycopg2://<username>:<password>@<host>:<port>/<database>
DATABASE_URL=postgresql+psycopg2://postgres:postgres@127.0.0.1:5432/dsr

# ============================================
# FLASK SERVER CONFIGURATION
# ============================================
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
FLASK_DEBUG=true
FLASK_ENV=development

# ============================================
# SECURITY (REQUIRED IN PRODUCTION)
# ============================================
# Generate strong secrets: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change_me_in_production
JWT_SECRET=change_me_jwt_in_production
JWT_EXPIRE_MINUTES=120

# ============================================
# CORS SETTINGS
# ============================================
# Development: use "*" to allow all origins
# Production: specify exact domains, e.g., "https://yourdomain.com,https://www.yourdomain.com"
CORS_ORIGINS=*

# ============================================
# APPLICATION SETTINGS
# ============================================
# Submission auth requirement
SUBMISSION_REQUIRE_AUTH=false

# Optional Content Security Policy override
# CONTENT_SECURITY_POLICY=default-src 'self' 'unsafe-inline' data: blob:; connect-src *

# ============================================
# SECURITY SETTINGS
# ============================================
# IP Access Control (comma-separated lists)
# ALLOWED_IPS=127.0.0.1,::1  # Empty = allow all (development only)
# BLOCKED_IPS=  # Comma-separated list of blocked IPs

# Account Lockout Settings
MAX_FAILED_LOGIN_ATTEMPTS=5  # Lock account after this many failed attempts
LOGIN_LOCKOUT_MINUTES=15  # Lockout duration in minutes

# Rate Limiting (Redis - optional for production)
# REDIS_URL=redis://localhost:6379/0  # Optional: for distributed rate limiting

# ============================================
# ADMIN USER (OPTIONAL - FOR FIRST SETUP)
# ============================================
# Default admin seed (optional). If set, an admin user will be created at startup.
# Change these and then remove after first run.
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin#ChangeMe1

